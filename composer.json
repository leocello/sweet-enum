{
    "name": "leocello/sweet-enum",
    "type": "library",
    "description": "Provides the ability to declare \"properties\" to enums using PHP Attributes, also to define classes for specific case functionalities and much more.",
    "license": "MIT",
    "authors": [
        {
            "name": "Leo Oberle",
            "email": "leocello@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "laravel/pint": "^1.16"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Leocello\\SweetEnum\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leocello\\SweetEnum\\Tests\\": "tests/",
            "Leocello\\SweetEnum\\Examples\\": "examples/"
        }
    },
    "scripts": {
        "lint": "pint",
        "test": "pest"
    }
}
